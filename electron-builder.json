{
  "asar": false,
  "productName": "hcyApp",
  "copyright": "Copyright Â© 2022 zifeifish",
  "directories": {
    "output": "dist_electron"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json"
  ],
  "extraResources": [{
    "from": "dist_web",
    "to": "app",
    "filter": [
      "**/*"
    ]
  }],
  "win": {
    "icon": "dist_web/assets/icons",
    "target": [
      "portable"
    ]
  },
  "portable": {
    "splashImage": "dist_web/assets/icons/electron.bmp"
  },
  "mac": {
    "category": "public.app-category.utilities",
    "icon": "dist_web/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist_web/assets/icons",
    "target": [
      "AppImage"
    ]
  }
}
